<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardproductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#a9a9a9"
        android:pointerIcon="hand"
        card_view:cardBackgroundColor="#fff"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="8dp"
        card_view:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">


                <ImageView
                    android:id="@+id/productoimagen"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.86"
                    android:src="@drawable/beer" />

                <TextView
                    android:id="@+id/productoprecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/view"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"

                    android:background="@drawable/bg_round_rect"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="12.0"
                    android:textAlignment="center"
                    android:textColor="@color/tw__solid_white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/idproducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.86"
                    android:textColor="@android:color/transparent"
                    android:textSize="8sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:layout_weight="0.77"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/productonombre"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignTop="@+id/view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:text="oay de limon con manzana"
                    android:textColor="#605f5f"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productoingredientes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:maxLines="4"
                    android:text="ingredientes"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/myCheckBox"
                        android:layout_width="38dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/disenocheckbox"
                        android:button="@null"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/contidadpedida"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/circulofondo"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/masmenos"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/botoncajaredondeada"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/plus_button"
                        android:layout_width="39dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/mas" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#000" />

                    <Button
                        android:id="@+id/menos_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/menos" />

                </LinearLayout>

                <Button
                    android:id="@+id/botonok"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/bg_round_rect"
                    android:text="OK"
                    android:textColor="@color/authui_inputTextColor"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>