<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.47"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/background"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="64dp"
                android:background="@drawable/controlredondeado"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <ExpandableListView
                        android:id="@+id/simpleExpandableListView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="20dp"

                        android:childDivider="#00d0ff"
                        android:divider="#ffaa00"
                        android:dividerHeight="1dp" >

                    </ExpandableListView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal">

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btncobrarpedido"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/editarusuario"
                            android:text="Cobrar"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            app:buttonColor="@color/fbutton_color_emerald"
                            fbutton:buttonColor="@color/colorprincipalamarillo"
                            fbutton:shadowEnabled="true" />

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btneditarpedido"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"

                            android:background="@drawable/editarusuario"
                            android:text="Editar "
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            app:buttonColor="@color/colorprincipalamarillo"
                            fbutton:buttonColor="@color/colorprincipalamarillo"
                            fbutton:shadowEnabled="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.34"
                        android:orientation="horizontal">

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btnimprimir"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="15dp"

                            android:background="@drawable/editarusuario"
                            android:text="Imprimir "
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            app:buttonColor="@color/tw__blue_default"
                            fbutton:buttonColor="@color/colorprincipalamarillo"
                            fbutton:shadowEnabled="true" />

                        <info.hoang8f.widget.FButton
                            android:id="@+id/btneliminaredido"

                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"

                            android:background="@drawable/editarusuario"
                            android:text="Eliminar "
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            app:buttonColor="@color/colorAccent"
                            fbutton:buttonColor="@color/colorprincipalamarillo"
                            fbutton:shadowEnabled="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">


                        <info.hoang8f.widget.FButton
                            android:id="@+id/cambiarmesota"

                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"


                            android:layout_marginLeft="47dp"
                            android:background="@drawable/editarusuario"
                            android:text="Nueva Posicion "
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            app:buttonColor="@color/fbutton_color_amethyst"
                            fbutton:buttonColor="@color/colorprincipalamarillo"
                            fbutton:shadowEnabled="true" />

                        <NumberPicker
                            android:id="@+id/numberPickeroto"
                            android:layout_width="62dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="30dp"
                            android:background="@color/fbutton_color_amethyst" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/overlapImage"
                android:layout_width="121dp"
                android:layout_height="110dp"
                android:layout_alignEnd="@+id/background"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="35dp"
                android:adjustViewBounds="true"
                android:background="@drawable/redondearimagen"
                android:src="@drawable/ideae" />

            <Button
                android:id="@+id/btnatrasmnumesa"
                android:layout_width="44dp"
                android:layout_height="54dp"

                android:layout_alignBottom="@+id/background"
                android:background="@drawable/atras"
                android:textColorLink="@color/authui_inputTextColor" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>