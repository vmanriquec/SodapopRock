<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tab3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffd374"
        android:baselineAligned="true"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/nebrascafondodesenfocado"
        android:orientation="vertical"
        android:weightSum="1"

        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/buno"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/buttonmesasbackground"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:text="1"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bdos"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButtonmesa5"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="15dp"
                android:text="2" />

            <Button
                android:id="@+id/btres"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageButtonmesa13"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/imageButtonmesa7"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="5dp"
                android:text="3" />

            <Button
                android:id="@+id/bcuatro"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageButtonmesa10"
                android:layout_alignStart="@+id/imageButtonmesa10"
                android:layout_alignTop="@+id/imageButtonmesa6"
                android:layout_marginLeft="5dp"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="15dp"
                android:text="4" />

            <Button
                android:id="@+id/bcinco"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="10dp"
                android:text="5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:weightSum="1">

            <Button
                android:id="@+id/bseis"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="10dp"
                android:text="6" />

            <Button
                android:id="@+id/bsiete"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="10dp"
                android:text="7" />

            <Button
                android:id="@+id/bocho"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="10dp"
                android:text="8" />

            <Button
                android:id="@+id/bnueve"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="10dp"
                android:text="9" />

            <Button
                android:id="@+id/bdiez"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="10dp"
                android:text="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:weightSum="1">

            <Button
                android:id="@+id/bonce"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="10dp"
                android:text="11" />

            <Button
                android:id="@+id/bdoce"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="10dp"
                android:text="12" />

            <Button
                android:id="@+id/btrece"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="10dp"
                android:text="13" />

            <Button
                android:id="@+id/bcatorce"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="10dp"
                android:text="14" />

            <Button
                android:id="@+id/bquince"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/buttonmesasbackground"
                android:paddingRight="10dp"
                android:text="15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botonrefrescarmesas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_centerHorizontal="true"
                android:background="@drawable/buttonshape2"
                android:shadowColor="#B71C1C"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Reload Mesas"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>