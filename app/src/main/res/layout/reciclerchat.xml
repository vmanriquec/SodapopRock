<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent">

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recicladorchat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:padding="3dp"
        android:scrollbars="vertical"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <info.hoang8f.widget.FButton
            android:id="@+id/btnemviar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            android:background="@drawable/editarusuario"
            android:text="Enviar"
            android:textColor="@android:color/white"
            android:textSize="14sp"

            app:buttonColor="@color/tw__blue_default"
            fbutton:buttonColor="@color/colorprincipalamarillo"
            fbutton:shadowEnabled="true" />


        <EditText
            android:id="@+id/editto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Digita tu mensaje "
            android:inputType="textPersonName"
            android:textColor="@color/authui_inputTextColor" />
    </LinearLayout>


</RelativeLayout>

